<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_following_background_selector"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In->09:01" />
    
    <TextView
        android:id="@+id/txt_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dp"
        android:layout_below="@+id/txt_in_time"
        android:text="Out->09:01" />
    
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delay(min)" 
        android:layout_toLeftOf="@+id/txt_date"
        android:layout_marginRight="20dp"
        />
    
    <TextView
        android:id="@+id/txt_delay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dp"
        android:layout_below="@+id/txt_in_time"
        android:layout_toLeftOf="@+id/txt_date"
        android:layout_marginRight="20dp"
        android:text="16min" />
    
     <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="2016/05/12" />
    

</RelativeLayout>